<?xml version="1.0"?>
<block>
  <name>MLoRa2 Receiver</name>
  <key>MLoRa_mlora2_receiver</key>
  <category>[MLoRa]</category>
  <import>import MLoRa</import>
  <make>MLoRa.mlora2_receiver($bw, $samples_per_second, $sf, $cr, $powers, $byte_lens, $bin_thr, $sfd_tol)</make>
  <!-- Make one 'param' node for every Parameter you want settable from the GUI.
       Sub-nodes:
       * name
       * key (makes the value accessible as $keyname, e.g. in the make node)
       * type -->
  <param>
    <name>Bandwidth</name>
    <key>bw</key>
    <type>float</type>
  </param>

  <param>
    <name>Sampling Rate</name>
    <key>samples_per_second</key>
    <type>float</type>  
  </param>

  <param>
    <name>Spreading Factor</name>
    <key>sf</key>
    <type>int</type>
  </param>

  <param>
    <name>Coding Rate</name>
    <key>cr</key>
    <type>int</type>
  </param>

  <param>
    <name>Powers</name>
    <key>powers</key>
    <type>int_vector</type>
  </param>

  <param>
    <name>Byte lengths</name>
    <key>byte_lens</key>
    <type>int_vector</type>
  </param>

  <param>
    <name>Bin Threshold</name>
    <key>bin_thr</key>
    <type>int</type>
  </param>

  <param>
    <name>SFD Tolerance</name>
    <key>sfd_tol</key>
    <type>int</type>
  </param>

  <!-- Make one 'sink' node per input. Sub-nodes:
       * name (an identifier for the GUI)
       * type
       * vlen
       * optional (set to 1 for optional inputs) -->
  <sink>
    <name>in</name>
    <type>complex</type>
  </sink>

  <!-- Make one 'source' node per output. Sub-nodes:
       * name (an identifier for the GUI)
       * type
       * vlen
       * optional (set to 1 for optional inputs) -->
  <source>
    <name>out</name>
    <type>message</type>
  </source>
  
</block>
